<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hackatonasdra.estoylisto" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Home"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TodasMisActividades"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_todas_mis_actividades"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
        </activity>
        <activity
            android:name=".Tutotial"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_tutotial"
            android:theme="@style/Theme.AppCompat.NoActionBar" >
        </activity>
        <activity
            android:name=".EjemploMysql"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_ejemplo_mysql"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".CrearActividad"
            android:label="@string/title_activity_crear_actividad" >
        </activity>
    </application>

</manifest>
